<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_scanned_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/omron_body_composition_monitor"
        android:textSize="22sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_scanned_device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11:22:33:44"
        android:textSize="18sp"
        android:textColor="@color/cardview_dark_background"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_scanned_device_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>